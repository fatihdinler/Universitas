<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentDersNotlari">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/afis1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/white"
                    android:paddingLeft="50dp"
                    android:paddingTop="50dp"
                    android:paddingRight="50dp"
                    android:paddingBottom="50dp"
                    android:src="@drawable/calculus" />

                <ImageButton
                    android:id="@+id/afis2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/white"
                    android:paddingLeft="50dp"
                    android:paddingTop="50dp"
                    android:paddingRight="50dp"
                    android:paddingBottom="50dp"
                    android:src="@drawable/thermo" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/afis3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/white"
                    android:paddingLeft="50dp"
                    android:paddingTop="50dp"
                    android:paddingRight="50dp"
                    android:paddingBottom="50dp"
                    android:src="@drawable/ec" />

                <ImageButton
                    android:id="@+id/afis4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/white"
                    android:paddingLeft="50dp"
                    android:paddingTop="50dp"
                    android:paddingRight="50dp"
                    android:paddingBottom="50dp"
                    android:src="@drawable/material" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/afis5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/white"
                    android:paddingLeft="50dp"
                    android:paddingTop="50dp"
                    android:paddingRight="50dp"
                    android:paddingBottom="50dp"
                    android:src="@drawable/op" />

                <ImageButton
                    android:id="@+id/afis6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/white"
                    android:paddingLeft="50dp"
                    android:paddingTop="50dp"
                    android:paddingRight="50dp"
                    android:paddingBottom="50dp"
                    android:src="@drawable/prob" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/afis7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/white"
                    android:paddingLeft="50dp"
                    android:paddingTop="50dp"
                    android:paddingRight="50dp"
                    android:paddingBottom="50dp"
                    android:src="@drawable/software" />

                <ImageButton
                    android:id="@+id/afis8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/white"
                    android:paddingLeft="50dp"
                    android:paddingTop="50dp"
                    android:paddingRight="50dp"
                    android:paddingBottom="50dp"
                    android:src="@drawable/statistics" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>